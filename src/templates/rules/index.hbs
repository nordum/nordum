{{#> layout pageTitle="Language Rules - Nordum" currentPage="rules" bodyClass="rules-page"}}

<div class="page-header">
    <div class="container">
        <h1>{{t "rules.title" "Language Rules"}}</h1>
        <p class="lead">{{t "rules.subtitle" "Core principles that make Nordum easy to learn and use in today's multilingual world"}}</p>
        
        <div class="quick-links">
            <a href="/rules/language-specification/" class="btn btn-primary">
                {{t "rules.full_specification" "Complete Language Specification"}}
            </a>
            <a href="/rules/dictionary-import/" class="btn btn-outline">
                {{t "rules.dictionary_import" "Dictionary Import System"}}
            </a>
        </div>
    </div>
</div>

<div class="main-content">
    <div class="container">
        <div class="overview-section">
            <h2>{{t "rules.overview.title" "Language Overview"}}</h2>
            <p>{{t "rules.overview.description" "Nordum is a constructed pan-Scandinavian written language that creates a balanced bridge between Norwegian (Bokmål), Danish, and Swedish. It uses systematic rules to maximize mutual intelligibility while supporting modern communication needs."}}</p>
            
            <div class="key-features">
                <div class="feature-card">
                    <h3>{{t "rules.features.balanced" "Balanced Selection"}}</h3>
                    <p>{{t "rules.features.balanced_desc" "Equal respect for all three source languages"}}</p>
                </div>
                <div class="feature-card">
                    <h3>{{t "rules.features.systematic" "Systematic Grammar"}}</h3>
                    <p>{{t "rules.features.systematic_desc" "Clear grammatical distinctions through distinctive endings"}}</p>
                </div>
                <div class="feature-card">
                    <h3>{{t "rules.features.modern" "Modern Practical"}}</h3>
                    <p>{{t "rules.features.modern_desc" "English loanwords preserved for technical communication"}}</p>
                </div>
                <div class="feature-card">
                    <h3>{{t "rules.features.flexible" "Alternative Spellings"}}</h3>
                    <p>{{t "rules.features.flexible_desc" "Multiple valid forms accommodate regional pronunciation"}}</p>
                </div>
            </div>
        </div>

        <div class="rules-grid">
</div>
            <!-- Core Philosophy -->
            <section class="rule-section">
                <h2>{{t "rules.philosophy.title" "Core Philosophy"}}</h2>
                <div class="principle-card">
                    <h3>{{t "rules.philosophy.bokmaal_danish" "Bokmål and Danish Foundation"}}</h3>
                    <p>{{t "rules.philosophy.bokmaal_danish_desc" "Nordum prioritizes forms from Norwegian Bokmål and Danish, creating a natural bridge between these closely related languages while maintaining intelligibility with Swedish."}}</p>
                    
                    <div class="example-box">
                        <strong>{{t "common.example" "Example"}}:</strong>
                        <ul>
                            <li><strong>{{t "common.languageLabel.norwegian"}}:</strong> arbeider</li>
                            <li><strong>{{t "common.languageLabel.danish"}}:</strong> arbejder</li>
                            <li><strong>{{t "common.languageLabel.swedish"}}:</strong> arbetar</li>
                            <li><strong>{{t "common.languageLabel.nordum"}}:</strong> <span class="nordum-word">arbeider</span> (Norwegian/Danish form preferred)</li>
                        </ul>
                    </div>
                </div>
            </section>

            <!-- English Loanwords -->
            <section class="rule-section">
                <h2>{{t "rules.loanwords.title" "English Loanwords"}}</h2>
                <div class="principle-card">
                    <h3>{{t "rules.loanwords.unchanged" "Keep Original Forms"}}</h3>
                    <p>{{t "rules.loanwords.unchanged_desc" "Modern English words like 'computer', 'internet', and 'software' remain unchanged, following Danish practice. This makes Nordum practical for contemporary use."}}</p>
                    
                    <div class="example-box">
                        <strong>{{t "common.examples" "Examples"}}:</strong>
                        <div class="word-grid">
                            <div class="word-comparison">
                                <span class="source-lang">{{t "common.languageLabel.english"}}:</span>
                                <span class="source-word">computer</span>
                                <span class="nordum-result">→ <span class="nordum-word">computer</span></span>
                            </div>
                            <div class="word-comparison">
                                <span class="source-lang">{{t "common.languageLabel.english"}}:</span>
                                <span class="source-word">internet</span>
                                <span class="nordum-result">→ <span class="nordum-word">internet</span></span>
                            </div>
                            <div class="word-comparison">
                                <span class="source-lang">{{t "common.languageLabel.english"}}:</span>
                                <span class="source-word">software</span>
                                <span class="nordum-result">→ <span class="nordum-word">software</span></span>
                            </div>
                            <div class="word-comparison">
                                <span class="source-lang">{{t "common.languageLabel.english"}}:</span>
                                <span class="source-word">email</span>
                                <span class="nordum-result">→ <span class="nordum-word">email</span></span>
                            </div>
                        </div>
                    </div>

                    <div class="note-box">
                        <strong>{{t "common.note" "Note"}}:</strong> {{t "rules.loanwords.note" "This approach mirrors Danish usage where technical terms remain in English, making Nordum immediately practical for modern communication."}}
                    </div>
                </div>
            </section>

            <!-- Number System -->
            <section class="rule-section">
                <h2>{{t "rules.numbers.title" "Number System"}}</h2>
                <div class="principle-card">
                    <h3>{{t "rules.numbers.norwegian" "Norwegian System"}}</h3>
                    <p>{{t "rules.numbers.norwegian_desc" "Nordum adopts the Norwegian number system, which is the most regular and logical among the three languages."}}</p>
                    
                    <div class="number-table">
                        <h4>{{t "rules.numbers.basic" "Basic Numbers"}}</h4>
                        <div class="number-grid">
                            <div class="number-row"><span class="number">1</span> <span class="nordum-word">en/ett</span></div>
                            <div class="number-row"><span class="number">2</span> <span class="nordum-word">to</span></div>
                            <div class="number-row"><span class="number">3</span> <span class="nordum-word">tre</span></div>
                            <div class="number-row"><span class="number">4</span> <span class="nordum-word">fire</span></div>
                            <div class="number-row"><span class="number">5</span> <span class="nordum-word">fem</span></div>
                            <div class="number-row"><span class="number">10</span> <span class="nordum-word">ti</span></div>
                            <div class="number-row"><span class="number">20</span> <span class="nordum-word">tjue</span></div>
                            <div class="number-row"><span class="number">50</span> <span class="nordum-word">femti</span> <em>(not halvtreds)</em></div>
                            <div class="number-row"><span class="number">100</span> <span class="nordum-word">hundre</span></div>
                            <div class="number-row"><span class="number">1000</span> <span class="nordum-word">tusen</span></div>
                        </div>
                    </div>

                    <div class="comparison-box">
                        <h4>{{t "rules.numbers.comparison" "Why Norwegian?"}}</h4>
                        <table class="comparison-table">
                            <thead>
                                <tr>
                                    <th>{{t "common.number" "Number"}}</th>
                                    <th>{{t "common.norwegian" "Norwegian"}}</th>
                                    <th>{{t "common.danish" "Danish"}}</th>
                                    <th>{{t "common.swedish" "Swedish"}}</th>
                                    <th>{{t "common.nordum" "Nordum"}}</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>50</td>
                                    <td>femti</td>
                                    <td>halvtreds</td>
                                    <td>femtio</td>
                                    <td><strong>femti</strong></td>
                                </tr>
                                <tr>
                                    <td>60</td>
                                    <td>seksti</td>
                                    <td>tres</td>
                                    <td>sextio</td>
                                    <td><strong>seksti</strong></td>
                                </tr>
                                <tr>
                                    <td>70</td>
                                    <td>sytti</td>
                                    <td>halvfjerds</td>
                                    <td>sjuttio</td>
                                    <td><strong>sytti</strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

            <!-- Question Words -->
            <section class="rule-section">
                <h2>{{t "rules.questions.title" "Question Words"}}</h2>
                <div class="principle-card">
                    <h3>{{t "rules.questions.no_silent_h" "No Silent 'H' - Swedish Pattern"}}</h3>
                    <p>{{t "rules.questions.no_silent_h_desc" "Question words start with 'v' rather than 'hv', eliminating the silent 'h' that appears in Norwegian and Danish. This follows Swedish practice and improves phonetic clarity."}}</p>
                    
                    <div class="question-grid">
                        <div class="question-word">
                            <span class="nordum-word">vad</span>
                            <span class="english">{{t "questionWords.what"}}</span>
                            <div class="comparison">
                                <small>No: <strike>hvad</strike> (Danish) <strike>hva</strike> (Norwegian)</small>
                            </div>
                        </div>
                        <div class="question-word">
                            <span class="nordum-word">var</span>
                            <span class="english">{{t "questionWords.where"}}</span>
                            <div class="comparison">
                                <small>No: <strike>hvor</strike> (Danish/Norwegian)</small>
                            </div>
                        </div>
                        <div class="question-word">
                            <span class="nordum-word">ven</span>
                            <span class="english">{{t "questionWords.when"}}</span>
                            <div class="comparison">
                                <small>No: <strike>hvornår</strike> (Danish) <strike>når</strike> (Norwegian)</small>
                            </div>
                        </div>
                        <div class="question-word">
                            <span class="nordum-word">vem</span>
                            <span class="english">{{t "questionWords.who"}}</span>
                            <div class="comparison">
                                <small>No: <strike>hvem</strike> (Danish/Norwegian)</small>
                            </div>
                        </div>
                        <div class="question-word">
                            <span class="nordum-word">varför</span>
                            <span class="english">{{t "questionWords.why"}}</span>
                            <div class="comparison">
                                <small>No: <strike>hvorfor</strike> (Danish/Norwegian)</small>
                            </div>
                        </div>
                        <div class="question-word">
                            <span class="nordum-word">vilken</span>
                            <span class="english">{{t "questionWords.which"}}</span>
                            <div class="comparison">
                                <small>No: <strike>hvilken</strike> (Danish/Norwegian)</small>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Phonetic Integration -->
            <section class="rule-section">
                <h2>{{t "rules.phonetics.title" "Phonetic-Based Spelling"}}</h2>
                <div class="principle-card">
                    <h3>{{t "rules.phonetics.transcription" "IPA-Guided Orthography"}}</h3>
                    <p>{{t "rules.phonetics.transcription_desc" "Nordum spelling decisions incorporate phonetic transcription analysis, ensuring that written forms reflect actual pronunciation patterns across Scandinavian languages."}}</p>
                    
                    <div class="phonetic-examples">
                        <div class="phonetic-rule">
                            <h4>{{t "rules.phonetics.vowel_clarity" "Vowel Clarity"}}</h4>
                            <p>{{t "rules.phonetics.vowel_clarity_desc" "Spelling preserves vowel distinctions that are phonemically important:"}}</p>
                            <ul>
                                <li><span class="nordum-word">hus</span> [huːs] - {{t "phonetics.longUSound"}}</li>
                                <li><span class="nordum-word">hest</span> [hɛst] - {{t "phonetics.clearEVowel"}}</li>
                                <li><span class="nordum-word">tid</span> [tiːd] - {{t "phonetics.longISound"}}</li>
                            </ul>
                        </div>
                        
                        <div class="phonetic-rule">
                            <h4>{{t "rules.phonetics.consonant_clusters" "Consonant Simplification"}}</h4>
                            <p>{{t "rules.phonetics.consonant_clusters_desc" "Silent or unpronounced letters are eliminated:"}}</p>
                            <ul>
                                <li><span class="nordum-word">øl</span> (not <strike>öhl</strike>) - {{t "phonetics.olSound"}}</li>
                                <li><span class="nordum-word">kött</span> → <span class="nordum-word">köt</span> - {{t "phonetics.kotSound"}}</li>
                                <li><span class="nordum-word">lamm</span> → <span class="nordum-word">lam</span> - {{t "phonetics.lamSound"}}</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Practical Usage -->
            <section class="rule-section">
                <h2>{{t "rules.practical.title" "Modern Usage"}}</h2>
                <div class="principle-card">
                    <h3>{{t "rules.practical.multilingual" "Multilingual Context"}}</h3>
                    <p>{{t "rules.practical.multilingual_desc" "These rules recognize that Nordum users are multilingual and need a practical written standard that works alongside their native languages."}}</p>
                    
                    <div class="usage-tips">
                        <div class="tip-card">
                            <h4>{{t "rules.practical.code_switching" "Natural Code-Switching"}}</h4>
                            <p>{{t "rules.practical.code_switching_desc" "English technical terms can be seamlessly integrated without translation, matching natural usage patterns."}}</p>
                        </div>
                        
                        <div class="tip-card">
                            <h4>{{t "rules.practical.learning" "Easy Learning"}}</h4>
                            <p>{{t "rules.practical.learning_desc" "Regular number system and phonetic spelling reduce memorization burden for speakers of any Scandinavian language."}}</p>
                        </div>
                        
                        <div class="tip-card">
                            <h4>{{t "rules.practical.recognition" "Instant Recognition"}}</h4>
                            <p>{{t "rules.practical.recognition_desc" "Core vocabulary from Bokmål/Danish ensures immediate comprehension for the largest number of Scandinavian speakers."}}</p>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!-- Navigation -->
        <nav class="page-navigation">
            <a href="/tools/" class="nav-link">
                {{t "nav.try_tools" "Try the Tools"}} →
            </a>
            <a href="/rules/dictionary-import/" class="nav-link">
                {{t "nav.dictionary_import" "Dictionary Import"}} →
            </a>
        </nav>
    </div>
</div>

<style>
    .rules-grid {
        display: grid;
        gap: 2rem;
        margin: 2rem 0;
    }
    
    .rule-section {
        background: var(--bg-light);
        border-radius: 12px;
        padding: 2rem;
        border: 1px solid var(--border-color);
    }
    
    .principle-card {
        margin-top: 1rem;
    }
    
    .example-box, .note-box, .comparison-box {
        background: var(--bg-secondary);
        padding: 1.5rem;
        border-radius: 8px;
        margin: 1rem 0;
        border-left: 4px solid var(--primary-color);
    }
    
    .nordum-word {
        color: var(--primary-color);
        font-weight: 600;
        font-size: 1.1em;
    }
    
    .word-grid {
        display: grid;
        gap: 0.75rem;
        margin-top: 1rem;
    }
    
    .word-comparison {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.5rem;
        background: white;
        border-radius: 4px;
    }
    
    .source-lang {
        font-weight: 500;
        color: var(--text-secondary);
        min-width: 70px;
    }
    
    .source-word {
        font-family: monospace;
        background: var(--bg-code);
        padding: 0.2rem 0.4rem;
        border-radius: 3px;
        min-width: 80px;
    }
    
    .nordum-result {
        color: var(--primary-color);
        font-weight: 500;
    }
    
    .number-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 0.5rem;
        margin: 1rem 0;
    }
    
    .number-row {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem;
        background: white;
        border-radius: 4px;
    }
    
    .number {
        font-weight: bold;
        min-width: 30px;
        text-align: center;
    }
    
    .comparison-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }
    
    .comparison-table th,
    .comparison-table td {
        padding: 0.75rem;
        text-align: left;
        border-bottom: 1px solid var(--border-color);
    }
    
    .comparison-table th {
        background: var(--bg-secondary);
        font-weight: 600;
    }
    
    .question-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin: 1.5rem 0;
    }
    
    .question-word {
        background: white;
        padding: 1rem;
        border-radius: 8px;
        text-align: center;
        border: 2px solid var(--border-color);
    }
    
    .question-word .nordum-word {
        display: block;
        font-size: 1.3em;
        margin-bottom: 0.5rem;
    }
    
    .question-word .english {
        display: block;
        color: var(--text-secondary);
        font-style: italic;
        margin-bottom: 0.5rem;
    }
    
    .question-word .comparison {
        font-size: 0.85em;
        color: var(--text-muted);
    }
    
    .phonetic-examples {
        display: grid;
        gap: 1.5rem;
        margin-top: 1rem;
    }
    
    .phonetic-rule {
        background: white;
        padding: 1.5rem;
        border-radius: 8px;
        border: 1px solid var(--border-color);
    }
    
    .phonetic-rule h4 {
        margin-top: 0;
        color: var(--primary-color);
    }
    
    .usage-tips {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
        margin-top: 1.5rem;
    }
    
    .tip-card {
        background: white;
        padding: 1.5rem;
        border-radius: 8px;
        border: 1px solid var(--border-color);
    }
    
    .tip-card h4 {
        margin-top: 0;
        color: var(--primary-color);
    }
    
    .page-navigation {
        display: flex;
        gap: 1rem;
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border-color);
    }
    
    .nav-link {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background: var(--primary-color);
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-weight: 500;
        transition: background 0.2s;
    }
    
    .nav-link:hover {
        background: var(--primary-dark);
    }
    
    @media (max-width: 768px) {
        .word-comparison {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }
        
        .usage-tips {
            grid-template-columns: 1fr;
        }
        
        .page-navigation {
            flex-direction: column;
        }
    }
</style>

{{/layout}}