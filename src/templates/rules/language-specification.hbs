{{#> layout pageTitle="Nordum Language Specification" currentPage="rules" bodyClass="rules-page"}}

<div class="container">
    <div class="content specification-content">
        <h1>{{t "rules.language_specification_title" "Nordum Language Specification"}}</h1>
        
        {{#if specification.tableOfContents}}
        <nav class="spec-nav">
            <h3>{{t "rules.table_of_contents"}}</h3>
            <ul>
                {{#each specification.tableOfContents}}
                <li>
                    <a href="#{{id}}">{{title}}</a>
                    {{#if subsections}}
                    <ul>
                        {{#each subsections}}
                        <li><a href="#{{../id}}-{{id}}">{{title}}</a></li>
                        {{/each}}
                    </ul>
                    {{/if}}
                </li>
                {{/each}}
            </ul>
        </nav>
        {{/if}}

        <div class="specification-body">
            {{#each specification.sections}}
            <section id="{{@key}}" class="spec-section">
                {{{html}}}
            </section>
            {{/each}}
        </div>

        {{#if specification.generatedAt}}
        <div class="spec-meta">
            <p><small>
                {{t "generated_from"}} <code>{{specification.sourceFile}}</code> 
                {{t "on"}} {{specification.generatedAt}}
            </small></p>
        </div>
        {{/if}}
    </div>
</div>

<style>
.specification-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
}

.spec-nav {
    background: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 0.5rem;
    padding: 1.5rem;
    margin-bottom: 2rem;
}

.spec-nav h3 {
    margin-top: 0;
    color: #495057;
    font-size: 1.1rem;
}

.spec-nav ul {
    margin: 0;
    padding-left: 1.5rem;
}

.spec-nav li {
    margin: 0.5rem 0;
}

.spec-nav a {
    color: #007bff;
    text-decoration: none;
}

.spec-nav a:hover {
    text-decoration: underline;
}

.specification-body {
    line-height: 1.6;
}

.spec-section {
    margin-bottom: 3rem;
}

.spec-section h2 {
    color: #2c3e50;
    border-bottom: 2px solid #3498db;
    padding-bottom: 0.5rem;
    margin-bottom: 1.5rem;
}

.spec-section h3 {
    color: #34495e;
    margin-top: 2rem;
    margin-bottom: 1rem;
}

.spec-section h4 {
    color: #5a6c7d;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
}

.spec-section table {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
}

.spec-section th,
.spec-section td {
    border: 1px solid #dee2e6;
    padding: 0.75rem;
    text-align: left;
}

.spec-section th {
    background-color: #f8f9fa;
    font-weight: 600;
}

.spec-section code {
    background-color: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 0.25rem;
    padding: 0.2rem 0.4rem;
    font-size: 0.9em;
    color: #e83e8c;
}

.spec-section pre {
    background-color: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin: 1rem 0;
}

.spec-section pre code {
    background: none;
    border: none;
    padding: 0;
    color: #495057;
}

.spec-section blockquote {
    border-left: 4px solid #3498db;
    background-color: #f8f9fa;
    margin: 1rem 0;
    padding: 1rem 1.5rem;
    font-style: italic;
}

.spec-section ul,
.spec-section ol {
    margin: 1rem 0;
    padding-left: 2rem;
}

.spec-section li {
    margin: 0.5rem 0;
}

.spec-meta {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e9ecef;
    color: #6c757d;
    text-align: center;
}

.spec-meta code {
    font-size: 0.85em;
}

/* Responsive design */
@media (max-width: 768px) {
    .specification-content {
        padding: 1rem;
    }
    
    .spec-nav {
        padding: 1rem;
    }
    
    .spec-section table {
        font-size: 0.9rem;
    }
    
    .spec-section th,
    .spec-section td {
        padding: 0.5rem;
    }
}

/* Print styles */
@media print {
    .spec-nav {
        display: none;
    }
    
    .spec-section {
        break-inside: avoid;
    }
    
    .spec-section h2 {
        page-break-after: avoid;
    }
}
</style>

{{/layout}}