{{#> layout pageTitle="FAQ" currentPage="faq" bodyClass="faq-page"}}

<!-- FAQ Hero Section -->
<section class="hero faq-hero">
    <div class="container">
        <h1 class="hero-title">{{t 'faq.title'}}</h1>
        <p class="hero-subtitle">{{t 'faq.subtitle'}}</p>
    </div>
</section>

<!-- FAQ Content Section -->
<section class="faq-section">
    <div class="container">
        <div class="faq-content">
            <!-- What is Nordum -->
            <div class="faq-item">
                <h2 class="faq-question">{{t 'faq.whatIsNordum'}}</h2>
                <div class="faq-answer">
                    <p>{{t 'faq.whatIsNordumAnswer'}}</p>
                </div>
            </div>

            <!-- Why was Nordum created -->
            <div class="faq-item">
                <h2 class="faq-question">{{t 'faq.whyCreated'}}</h2>
                <div class="faq-answer">
                    <p>{{t 'faq.whyCreatedAnswer'}}</p>
                    <ul>
                        <li><strong>{{t 'faq.changingLandscape'}}</strong></li>
                        <li><strong>{{t 'faq.geographicMobility'}}</strong></li>
                        <li><strong>{{t 'faq.digitalCommunication'}}</strong></li>
                    </ul>
                </div>
            </div>

            <!-- Replacement question -->
            <div class="faq-item">
                <h2 class="faq-question">{{t 'faq.replacementQuestion'}}</h2>
                <div class="faq-answer">
                    <p><strong>{{t 'faq.replacementAnswer1'}}</strong></p>
                    <p>{{t 'faq.replacementAnswer2'}}</p>
                </div>
            </div>

            <!-- Nynorsk relationship -->
            <div class="faq-item">
                <h2 class="faq-question">{{t 'faq.nynorskRelationship'}}</h2>
                <div class="faq-answer">
                    <p>{{t 'faq.nynorskAnswer1'}}</p>
                    <p>{{t 'faq.nynorskAnswer2'}}</p>
                </div>
            </div>

            <!-- Historical context -->
            <div class="faq-item">
                <h2 class="faq-question">{{t 'faq.historicalContext'}}</h2>
                <div class="faq-answer">
                    <p>{{t 'faq.historicalAnswer1'}}</p>
                    <ul>
                        <li><strong>{{t 'faq.danishStandardization'}}</strong></li>
                        <li><strong>{{t 'faq.swedishStandardization'}}</strong></li>
                        <li><strong>{{t 'faq.norwegianStandardization'}}</strong></li>
                    </ul>
                    <p>{{t 'faq.historicalAnswer2'}}</p>
                </div>
            </div>

            <!-- Target audience -->
            <div class="faq-item">
                <h2 class="faq-question">{{t 'faq.targetAudience'}}</h2>
                <div class="faq-answer">
                    <p>{{t 'faq.targetAudienceList'}}</p>
                    <ul>
                        <li>{{t 'faq.scandinavians'}}</li>
                        <li>{{t 'faq.internationalCompanies'}}</li>
                        <li>{{t 'faq.educationalInstitutions'}}</li>
                        <li>{{t 'faq.travelers'}}</li>
                        <li>{{t 'faq.anyoneInterested'}}</li>
                    </ul>
                </div>
            </div>

            <!-- Learning difficulty -->
            <div class="faq-item">
                <h2 class="faq-question">{{t 'faq.learningDifficulty'}}</h2>
                <div class="faq-answer">
                    <p>{{t 'faq.learningAnswer'}}</p>
                </div>
            </div>

            <!-- English loanwords -->
            <div class="faq-item">
                <h2 class="faq-question">{{t 'faq.englishLoanwords'}}</h2>
                <div class="faq-answer">
                    <p>{{t 'faq.englishAnswer'}}</p>
                </div>
            </div>

            <!-- Contribution -->
            <div class="faq-item">
                <h2 class="faq-question">{{t 'faq.contribution'}}</h2>
                <div class="faq-answer">
                    <p>{{t 'faq.contributionAnswer1'}}</p>
                    <ul>
                        <li>{{t 'faq.submitEntries'}}</li>
                        <li>{{t 'faq.reportIssues'}} <a href="https://github.com/nordum/nordum/issues" target="_blank">{{t 'common.githubIssues'}}</a></li>
                        <li>{{t 'faq.contactCollaboration'}} <a href="mailto:hei@nordum.org">hei@nordum.org</a></li>
                        <li>{{t 'faq.technicalHelp'}}</li>
                    </ul>
                    <p>{{t 'faq.contributionAnswer2'}}</p>
                </div>
            </div>

            <!-- Community section -->
            <div class="faq-item community-info">
                <h2 class="faq-question">{{t 'faq.communityInvolvement'}}</h2>
                <div class="faq-answer">
                    <p>{{t 'faq.communityAnswer1'}}</p>
                    <ul>
                        <li><strong>{{t 'faq.githubIssues'}}</strong> <a href="https://github.com/nordum/nordum/issues" target="_blank">{{t 'common.issueTracker'}}</a></li>
                        <li><strong>{{t 'faq.emailCollaboration'}}</strong> <a href="mailto:hei@nordum.org">hei@nordum.org</a></li>
                        <li><strong>{{t 'faq.discussion'}}</strong></li>
                        <li><strong>{{t 'faq.testing'}}</strong></li>
                    </ul>
                    <p>{{t 'faq.communityAnswer2'}}</p>
                </div>
            </div>
        </div>
    </div>
</section>

{{/layout}}