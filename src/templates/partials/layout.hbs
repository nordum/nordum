<!DOCTYPE html>
<html lang="{{lang}}" class="{{langClass lang}}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{#if pageTitle}}{{pageTitle}} - {{/if}}{{t 'site.title'}}</title>
    <meta name="description" content="{{#if pageDescription}}{{pageDescription}}{{else}}{{t 'site.description'}}{{/if}}">

    <!-- Favicon -->
    <link rel="icon" href="{{asset 'images/favicon.ico'}}" type="image/x-icon">
    <link rel="apple-touch-icon" href="{{asset 'images/apple-touch-icon.png'}}">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="{{asset 'css/main.css'}}">
    {{#if additionalCSS}}
        {{#each additionalCSS}}
        <link rel="stylesheet" href="{{asset this}}">
        {{/each}}
    {{/if}}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Open Graph -->
    <meta property="og:title" content="{{#if pageTitle}}{{pageTitle}} - {{/if}}{{t 'site.title'}}">
    <meta property="og:description" content="{{#if pageDescription}}{{pageDescription}}{{else}}{{t 'site.description'}}{{/if}}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{url}}{{#unless (eq lang 'en')}}/{{lang}}{{/unless}}{{currentPath}}">
    <meta property="og:site_name" content="Nordum">
    <meta property="og:image" content="{{url}}{{asset 'images/og-image.jpg'}}">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{#if pageTitle}}{{pageTitle}} - {{/if}}{{t 'site.title'}}">
    <meta name="twitter:description" content="{{#if pageDescription}}{{pageDescription}}{{else}}{{t 'site.description'}}{{/if}}">
    <meta name="twitter:image" content="{{url}}{{asset 'images/og-image.jpg'}}">

    <!-- Language alternates -->
    <link rel="alternate" hreflang="en" href="{{url}}{{currentPath}}">
    <link rel="alternate" hreflang="da" href="{{url}}/da{{currentPath}}">
    <link rel="alternate" hreflang="nb" href="{{url}}/nb{{currentPath}}">
    <link rel="alternate" hreflang="nn" href="{{url}}/nn{{currentPath}}">
    <link rel="alternate" hreflang="sv" href="{{url}}/sv{{currentPath}}">
    <link rel="alternate" hreflang="x-default" href="{{url}}/nordum{{currentPath}}">

    <!-- Canonical URL -->
    <link rel="canonical" href="{{url}}{{#unless (eq lang 'en')}}/{{lang}}{{/unless}}{{currentPath}}">

    <!-- Schema.org markup -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "{{t 'site.title'}}",
        "description": "{{t 'site.description'}}",
        "url": "{{url}}",
        "inLanguage": "{{lang}}",
        "potentialAction": {
            "@type": "SearchAction",
            "target": "{{url}}/tools/dictionary.html?q={search_term_string}",
            "query-input": "required name=search_term_string"
        },
        "creator": {
            "@type": "Organization",
            "name": "Nordum Project",
            "url": "{{url}}"
        }
    }
    </script>

    {{#if additionalHead}}
        {{{additionalHead}}}
    {{/if}}
</head>
<body class="{{#if bodyClass}}{{bodyClass}}{{/if}}">
    <div id="app">
        <!-- Skip to content link -->
        <a href="#main-content" class="skip-link">{{t 'common.skipToContent'}}</a>

        <!-- Header -->
        <header class="header" role="banner">
            <nav class="nav" role="navigation" aria-label="{{t 'nav.main'}}">
                <div class="nav-container">
                    <div class="nav-logo">
                        <a href="{{#if (eq lang 'en')}}/{{else}}/{{lang}}/{{/if}}" aria-label="{{t 'site.title'}} - {{t 'nav.home'}}">
                            <span class="logo-text">Nordum</span>
                            <span class="logo-tagline">{{t 'site.tagline'}}</span>
                        </a>
                    </div>

                    <ul class="nav-menu" role="menubar">
                        <li role="none">
                            <a href="{{#if (eq lang 'en')}}/{{else}}/{{lang}}/{{/if}}"
                               class="nav-link {{#if (eq currentPage 'home')}}active{{/if}}"
                               role="menuitem">{{t 'nav.home'}}</a>
                        </li>
                        <li role="none">
                            <a href="{{#if (eq lang 'en')}}/{{else}}/{{lang}}/{{/if}}#about"
                               class="nav-link {{#if (eq currentPage 'about')}}active{{/if}}"
                               role="menuitem">{{t 'nav.about'}}</a>
                        </li>
                        <li role="none">
                            <a href="{{#if (eq lang 'en')}}/rules/language-specification.html{{else}}/{{lang}}/rules/language-specification.html{{/if}}"
                               class="nav-link {{#if (eq currentPage 'grammar')}}active{{/if}}"
                               role="menuitem">{{t 'nav.grammar'}}</a>
                        </li>
                        <li role="none" class="nav-dropdown">
                            <button class="nav-link dropdown-toggle {{#if (eq currentSection 'tools')}}active{{/if}}"
                                    role="menuitem"
                                    aria-expanded="false"
                                    aria-haspopup="true">
                                {{t 'nav.tools'}}
                                <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 12 12" fill="currentColor">
                                    <path d="M6 8L2 4h8l-4 4z"/>
                                </svg>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li role="none">
                                    <a href="{{#if (eq lang 'en')}}/tools/dictionary.html{{else}}/{{lang}}/tools/dictionary.html{{/if}}"
                                       role="menuitem">{{t 'tools.dictionary.title'}}</a>
                                </li>
                                <li role="none">
                                    <a href="{{#if (eq lang 'en')}}/tools/spellcheck.html{{else}}/{{lang}}/tools/spellcheck.html{{/if}}"
                                       role="menuitem">{{t 'tools.spellcheck.title'}}</a>
                                </li>
                                <li role="none">
                                    <a href="{{#if (eq lang 'en')}}/tools/translator.html{{else}}/{{lang}}/tools/translator.html{{/if}}"
                                       role="menuitem">{{t 'tools.translator.title'}}</a>
                                </li>
                                <li role="none">
                                    <a href="{{#if (eq lang 'en')}}/tools/editor.html{{else}}/{{lang}}/tools/editor.html{{/if}}"
                                       role="menuitem">{{t 'tools.editor.title'}}</a>
                                </li>
                            </ul>
                        </li>
                        <li role="none">
                            <a href="{{#if (eq lang 'en')}}/faq.html{{else}}/{{lang}}/faq.html{{/if}}"
                               class="nav-link {{#if (eq currentPage 'faq')}}active{{/if}}"
                               role="menuitem">{{t 'nav.faq'}}</a>
                        </li>

                    </ul>

                    <!-- Language switcher -->
                    <div class="nav-language">
                        <button class="lang-toggle"
                                aria-expanded="false"
                                aria-haspopup="true">
                            {{t 'common.language'}}
                            <svg class="dropdown-arrow" width="12" height="12" viewBox="0 0 12 12" fill="currentColor">
                                <path d="M6 8L2 4h8l-4 4z"/>
                            </svg>
                        </button>
                        <ul class="lang-dropdown" role="menu">
                            <li role="none">
                                <a href="{{currentPath}}"
                                   class="lang-link {{#if (eq lang 'en')}}active{{/if}}"
                                   role="menuitem"
                                   hreflang="en">English</a>
                            </li>
                            <li role="none">
                                <a href="/da{{currentPath}}"
                                   class="lang-link {{#if (eq lang 'da')}}active{{/if}}"
                                   role="menuitem"
                                   hreflang="da">Dansk</a>
                            </li>
                            <li role="none">
                                <a href="/nb{{currentPath}}"
                                   class="lang-link {{#if (eq lang 'nb')}}active{{/if}}"
                                   role="menuitem"
                                   hreflang="nb">Norsk (Bokm√•l)</a>
                            </li>
                            <li role="none">
                                <a href="/nn{{currentPath}}"
                                   class="lang-link {{#if (eq lang 'nn')}}active{{/if}}"
                                   role="menuitem"
                                   hreflang="nn">Norsk (Nynorsk)</a>
                            </li>
                            <li role="none">
                                <a href="/sv{{currentPath}}"
                                   class="lang-link {{#if (eq lang 'sv')}}active{{/if}}"
                                   role="menuitem"
                                   hreflang="sv">Svenska</a>
                            </li>
                            <li role="none">
                                <a href="/nordum{{currentPath}}"
                                   class="lang-link {{#if (eq lang 'nordum')}}active{{/if}}"
                                   role="menuitem"
                                   hreflang="x-default">Nordum</a>
                            </li>
                        </ul>
                    </div>

                    <!-- Mobile menu toggle -->
                    <button class="hamburger"
                            aria-expanded="false"
                            aria-controls="nav-menu"
                            aria-label="{{t 'nav.toggleMenu'}}">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </button>
                </div>
            </nav>
        </header>

        <!-- Main content -->
        <main id="main-content" role="main" tabindex="-1">
            {{> @partial-block}}
        </main>

        <!-- Footer -->
        <footer class="footer" role="contentinfo">
            <div class="container">
                <div class="footer-content">
                    <div class="footer-section">
                        <h3>Nordum</h3>
                        <p>{{t 'site.tagline'}}</p>
                        <div class="social-links">
                            <a href="https://discord.gg/nordum"
                               target="_blank"
                               rel="noopener noreferrer"
                               aria-label="Discord">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.010c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"/>
                                </svg>
                            </a>
                            <a href="https://github.com/nordum/nordum"
                               target="_blank"
                               rel="noopener noreferrer"
                               aria-label="GitHub">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                </svg>
                            </a>
                        </div>
                    </div>

                    <div class="footer-section">
                        <h4>{{t 'footer.project.title'}}</h4>
                        <ul>
                            <li><a href="{{#if (eq lang 'en')}}/{{else}}/{{lang}}/{{/if}}#about">{{t 'footer.project.about'}}</a></li>
                            <li><a href="{{#if (eq lang 'en')}}/faq.html{{else}}/{{lang}}/faq.html{{/if}}">FAQ</a></li>
                            <li><a href="https://github.com/nordum/nordum" target="_blank" rel="noopener noreferrer">GitHub</a></li>
                        </ul>
                    </div>

                    <div class="footer-section">
                        <h4>{{t 'footer.tools.title'}}</h4>
                        <ul>
                            <li><a href="{{#if (eq lang 'en')}}/tools/dictionary.html{{else}}/{{lang}}/tools/dictionary.html{{/if}}">{{t 'footer.tools.dictionary'}}</a></li>
                            <li><a href="{{#if (eq lang 'en')}}/tools/spellcheck.html{{else}}/{{lang}}/tools/spellcheck.html{{/if}}">{{t 'footer.tools.spellcheck'}}</a></li>
                            <li><a href="{{#if (eq lang 'en')}}/tools/translator.html{{else}}/{{lang}}/tools/translator.html{{/if}}">{{t 'footer.tools.translator'}}</a></li>
                        </ul>
                    </div>

                    <div class="footer-section">
                        <h4>{{t 'footer.community.title'}}</h4>
                        <ul>
                            <li><a href="https://discord.gg/nordum" target="_blank" rel="noopener noreferrer">{{t 'footer.community.discord'}}</a></li>
                            <li><a href="https://github.com/nordum/nordum" target="_blank" rel="noopener noreferrer">{{t 'footer.community.github'}}</a></li>
                            <li><a href="mailto:hei@nordum.org">{{t 'footer.community.contact'}}</a></li>
                        </ul>
                    </div>
                </div>

                <div class="footer-bottom">
                    <p>{{t 'footer.copyright'}}</p>
                    <div class="footer-links">
                        <a href="{{#if (eq lang 'en')}}/privacy.html{{else}}/{{lang}}/privacy.html{{/if}}">{{t 'footer.privacy'}}</a>
                        <a href="{{#if (eq lang 'en')}}/terms.html{{else}}/{{lang}}/terms.html{{/if}}">{{t 'footer.terms'}}</a>
                    </div>
                </div>
            </div>
        </footer>

        <!-- Cookie notice -->
        <div id="cookie-notice" class="cookie-notice hidden" role="dialog" aria-labelledby="cookie-title" aria-describedby="cookie-desc">
            <div class="cookie-content">
                <h3 id="cookie-title">{{t 'cookies.title'}}</h3>
                <p id="cookie-desc">{{t 'cookies.description'}}</p>
                <div class="cookie-actions">
                    <button id="cookie-accept" class="btn btn-primary">{{t 'cookies.accept'}}</button>
                    <button id="cookie-settings" class="btn btn-secondary">{{t 'cookies.settings'}}</button>
                    <button id="cookie-decline" class="btn btn-text">{{t 'cookies.decline'}}</button>
                </div>
            </div>
        </div>

        <!-- Loading indicator -->
        <div id="loading-indicator" class="loading-indicator hidden">
            <div class="loading-spinner"></div>
            <span>{{t 'common.loading'}}</span>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        // Set initial language and theme
        document.documentElement.setAttribute('data-lang', '{{lang}}');

        // Expose site data to JavaScript
        window.NORDUM_SITE = {
            lang: '{{lang}}',
            version: '{{version}}',
            buildTime: '{{buildTime}}',
            url: '{{url}}',
            currentPath: '{{currentPath}}'
        };

        // Translations for JavaScript
        window.NORDUM_I18N = {};
    </script>

    <script src="{{asset 'js/main.js'}}" defer></script>
    {{#if additionalJS}}
        {{#each additionalJS}}
        <script src="{{asset this}}" defer></script>
        {{/each}}
    {{/if}}

    <!-- Service Worker -->
    <script>
        if ('serviceWorker' in navigator && '{{env}}' === 'production') {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then(registration => console.log('SW registered'))
                    .catch(error => console.log('SW registration failed'));
            });
        }
    </script>

    <!-- Analytics (only in production) -->
    {{#if (eq env 'production')}}
    <script async src="https://www.googletagmanager.com/gtag/js?id={{analyticsId}}"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', '{{analyticsId}}', {
            page_title: '{{pageTitle}}',
            page_location: window.location.href,
            content_language: '{{lang}}'
        });
    </script>
    {{/if}}
</body>
</html>
