{{#> layout pageTitle="Home" currentPage="home" bodyClass="home-page"}}

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="hero-logo">
            <img src="{{asset 'images/logo.svg'}}" alt="Nordum Logo" class="logo-main-svg">
        </div>
        <p class="hero-subtitle">{{t 'hero.subtitle'}}</p>
        <p class="hero-description">{{t 'hero.description'}}</p>

        <div class="hero-buttons">
            <a href="#about" class="btn btn-primary">{{t 'hero.learnMore'}}</a>
            <a href="#tools" class="btn btn-secondary">{{t 'hero.tryTools'}}</a>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="about-section">
    <div class="container">
        <h2 class="section-title">{{t 'about.title'}}</h2>
        <div class="about-cards">
            <div class="about-card">
                <div class="card-icon">üéØ</div>
                <h3>{{t 'about.purpose.title'}}</h3>
                <p>{{t 'about.purpose.description'}}</p>
            </div>
            <div class="about-card">
                <div class="card-icon">üß†</div>
                <h3>{{t 'about.philosophy.title'}}</h3>
                <p>{{t 'about.philosophy.description'}}</p>
            </div>
            <div class="about-card">
                <div class="card-icon">üåç</div>
                <h3>{{t 'about.vision.title'}}</h3>
                <p>{{t 'about.vision.description'}}</p>
            </div>
        </div>
    </div>
</section>

<!-- Grammar Section -->
<section id="grammar" class="grammar-section">
    <div class="container">
        <h2 class="section-title">{{t 'grammar.title'}}</h2>
        <div class="grammar-principles">
            <div class="principle-item">
                <div class="principle-icon">üìù</div>
                <div class="principle-content">
                    <h3>{{t 'grammar.orthography.title'}}</h3>
                    <p>{{t 'grammar.orthography.description'}}</p>
                </div>
            </div>
            <div class="principle-item">
                <div class="principle-icon">üîÑ</div>
                <div class="principle-content">
                    <h3>{{t 'grammar.morphology.title'}}</h3>
                    <p>{{t 'grammar.morphology.description'}}</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Tools Section -->
<section id="tools" class="tools-section">
    <div class="container">
        <h2 class="section-title">{{t 'tools.title'}}</h2>
        <div class="tools-grid">
            <a href="{{#if (eq lang 'en')}}/tools/dictionary.html{{else}}/{{lang}}/tools/dictionary.html{{/if}}" class="tool-card">
                <div class="tool-icon">üìñ</div>
                <h3>{{t 'tools.dictionary.title'}}</h3>
                <p>{{t 'tools.dictionary.description'}}</p>
                <div class="tool-stats">
                    <span class="stat">100+ {{t 'dictionary.stats.totalEntries'}}</span>
                </div>
            </a>

            <a href="{{#if (eq lang 'en')}}/tools/spellcheck.html{{else}}/{{lang}}/tools/spellcheck.html{{/if}}" class="tool-card">
                <div class="tool-icon">‚úÖ</div>
                <h3>{{t 'tools.spellcheck.title'}}</h3>
                <p>{{t 'tools.spellcheck.description'}}</p>
                <div class="tool-stats">
                    <span class="stat">{{t 'tools.spellcheck.realTimeChecking'}}</span>
                </div>
            </a>

            <a href="{{#if (eq lang 'en')}}/tools/translator.html{{else}}/{{lang}}/tools/translator.html{{/if}}" class="tool-card">
                <div class="tool-icon">üîÑ</div>
                <h3>{{t 'tools.translator.title'}}</h3>
                <p>{{t 'tools.translator.description'}}</p>
                <div class="tool-stats">
                    <span class="stat">4 {{t 'tools.translator.languages'}}</span>
                </div>
            </a>

            <a href="{{#if (eq lang 'en')}}/tools/editor.html{{else}}/{{lang}}/tools/editor.html{{/if}}" class="tool-card">
                <div class="tool-icon">üìù</div>
                <h3>{{t 'tools.editor.title'}}</h3>
                <p>{{t 'tools.editor.description'}}</p>
                <div class="tool-stats">
                    <span class="stat">{{t 'tools.editor.features'}}</span>
                </div>
            </a>
        </div>
    </div>
</section>

<!-- Community Section -->
<section class="community-section">
    <div class="container">
        <h2 class="section-title">{{t 'community.collaborate.title'}}</h2>
        <p>{{t 'community.collaborate.description'}}</p>

        <div class="collaboration-options">
            <div class="collaboration-item">
                <h3>{{t 'community.reportIssues.title'}}</h3>
                <p>{{t 'community.reportIssues.description'}}</p>
                <a href="https://github.com/nordum/nordum/issues" target="_blank" class="btn btn-secondary">GitHub Issues</a>
            </div>

            <div class="collaboration-item">
                <h3>{{t 'community.directCollaboration.title'}}</h3>
                <p>{{t 'community.directCollaboration.description'}}</p>
                <a href="mailto:hei@nordum.org" class="btn btn-secondary">hei@nordum.org</a>
            </div>

            <div class="collaboration-item">
                <h3>{{t 'community.stats.title'}}</h3>
                <div class="stat-item">
                    <span class="stat-number">3000+</span>
                    <span class="stat-label">{{t 'community.stats.dictionaryEntries'}}</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">3</span>
                    <span class="stat-label">{{t 'community.stats.languages'}}</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">95%</span>
                    <span class="stat-label">{{t 'community.stats.intelligibility'}}</span>
                </div>
            </div>
        </div>
    </div>
</section>

{{/layout}}
